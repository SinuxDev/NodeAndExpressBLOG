<%- include("../includes/head") %>
<section class="mx-auto">
  <h1 class="title">Login Your Account</h1>
  <% if(errorMsg.length){ %>
  <p class="msg-box"><%= errorMsg %></p>
  <% } %>
  <form action="/login" method="POST">
    <input value="<%= csrfToken %>" name="_csrf" hidden />
    <div>
      <label for="email">Enter Email</label>
      <input
        type="text"
        id="email"
        name="email"
        value="<%= oldFormData.email%>"
      />
    </div>
    <div>
      <label for="password">Enter Password</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= oldFormData.password%>"
      />
    </div>
    <a href="/reset-password">Forget Password?</a>
    <button>Login Account</button>
  </form>
</section>
<%- include("../includes/foot") %>
