<%- include("../includes/head") %>
<section class="mx-auto">
  <a href="/">GoBack Home</a>
  <h1 class="title">Register a new account here!!</h1>
  <% if(errorMsg.length){ %>
  <p class="msg-box-warn"><%= errorMsg %></p>
  <% } %>
  <form action="/register" method="POST">
    <input value="<%= csrfToken %>" name="_csrf" hidden />
    <div>
      <label for="email">Enter Email</label>
      <input
        type="text"
        id="email"
        name="email"
        value="<%= oldFormData.email%>"
      />
    </div>
    <div>
      <label for="password">Enter Password</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= oldFormData.password%>"
      />
    </div>
    <button>Register Account</button>
  </form>
</section>
<%- include("../includes/foot") %>
