<%- include("./includes/head") %>
<section class="mx-auto">
  <a href="/">GoBack Home</a>
  <h1 class="title">Add Post</h1>
  <% if(errorMsg.length){ %>
  <p class="msg-box"><%= errorMsg %></p>
  <% } %>
  <form action="/admin/edit-post" method="POST" enctype="multipart/form-data">
    <input value="<%= csrfToken %>" name="_csrf" hidden />
    <input type="text" value="<%= post._id %>" name="postId" hidden />
    <div>
      <label for="title">Enter Title</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= isValidationFail ? oldFormData.title : post.title %>"
      />
    </div>
    <div>
      <label for="photo">Enter Photo</label>
      <input type="file" id="photo" name="photo" />
    </div>
    <div>
      <label for="description">Enter Description</label>
      <textarea name="description" id="description" cols="30" rows="10">
<%= isValidationFail ? oldFormData.description : post.description %></textarea
      >
    </div>
    <button>Update Post</button>
  </form>
</section>
<%- include("./includes/foot") %>
