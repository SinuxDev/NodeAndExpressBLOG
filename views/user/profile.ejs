<%- include("../includes/head") %>
<section class="header">
  <h1 class="title">Post by <%= currentUserEmail %></h1>
  <div class="post-container">
    <% for(let post of postsArr){ %>
    <div class="post-box">
      <img
        src="<%= '/' + post.imgUrl %>"
        alt="<%= post.title %>"
        class="post-box-img"
      />
      <a href="/post/<%= post._id %>" class="post-title"><%= post.title %></a>
      <p class="post-email">Post by => <%= post.userId.email %></p>
    </div>
    <% } %>
  </div>
  <div class="paginate">
    <% if(hasNextPage) { %>
    <a href="/admin/view-profile?page=<%=nextPage %>"
      >Next Page <%=nextPage %></a
    >
    <% } %> <% if(hasPreviousPage) { %>
    <a href="/admin/view-profile?page=<%=previousPage %>"
      >Previous Page <%=previousPage %></a
    >
    <% } %>
  </div>
</section>
<%- include("../includes/foot") %>
