<%- include("../includes/head") %>
<section class="header">
  <div class="own-user">
    <div class="ic-email">
      <i class="fa-solid fa-circle-user"></i>
      <p><%= currentUserEmail %></p>
      <p class="">
        <% if(postsArr[0].userId.username){ %>
          <p class="premium-username"> <%= postsArr[0].userId.username %> <i class="fa-regular fa-star animate__animated animate__heartBeat animate__infinite infinite"></i> </p>
        <%}else{%>
          <p class="premium-username"> <%= postsArr[0].userId.username %> </p>
        <%}%>
      </p>
    </div>
    <div>
      <a href="/admin/username">Set Username</a>
      <a href="/admin/premium">Buy WEIO Premium</a>
    </div>
  </div>
  <div class="post-container">
    <% for(let post of postsArr){ %>
    <div class="post-box">
      <img
        src="<%= '/' + post.imgUrl %>"
        alt="<%= post.title %>"
        class="post-box-img"
      />
      <a href="/post/<%= post._id %>" class="post-title"><%= post.title %></a>
      <p class="post-email">Post by => <%= post.userId.email %></p>
    </div>
    <% } %>
  </div>
  <div class="paginate">
    <% if(hasNextPage) { %>
    <a href="/admin/view-profile?page=<%=nextPage %>"
      >Next Page <%=nextPage %></a
    >
    <% } %> <% if(hasPreviousPage) { %>
    <a href="/admin/view-profile?page=<%=previousPage %>"
      >Previous Page <%=previousPage %></a
    >
    <% } %>
  </div>
</section>
<%- include("../includes/foot") %>
