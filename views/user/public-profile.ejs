<%- include("../includes/head") %>
<section class="header">
  <div class="public-user">
    <i class="fa-solid fa-circle-user public-user-ic"></i>
    <p class="title">Post by <%= currentUserEmail %></p>
    <% if(postsArr[0].userId.username){ %>
    <p class="premium-username">
      <%= postsArr[0].userId.username %> <% if(postsArr[0].userId.isPremium) {%>
      <i
        class="fa-regular fa-star animate__animated animate__heartBeat animate__infinite infinite"
      ></i>
      <%}%>
    </p>
    <%}else{%>
    <p class="premium-username"><%= postsArr[0].userId.username %></p>
    <%}%>
  </div>
  <div class="post-container">
    <% for(let post of postsArr){ %>
    <div class="post-box">
      <img
        src="<%= '/' + post.imgUrl %>"
        alt="<%= post.title %>"
        class="post-box-img"
      />
      <a href="/post/<%= post._id %>" class="post-title"><%= post.title %></a>
      <p class="post-email">Post by => <%= post.userId.email %></p>
    </div>
    <% } %>
  </div>
  <div class="paginate">
    <% if(hasNextPage) { %>
    <a href="/profile/<%=currentUserId %>?page=<%=nextPage %>"
      >Next Page <%=nextPage %></a
    >
    <% } %> <% if(hasPreviousPage) { %>
    <a href="/profile/<%=currentUserId %>?page=<%=previousPage %>"
      >Previous Page <%=previousPage %></a
    >
    <% } %>
  </div>
</section>
<%- include("../includes/foot") %>
